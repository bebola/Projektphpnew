{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_Comments_delete'|trans({'%id%': Comments.id|default('')}) }}
{% endblock %}

{% block body %}
    <div id="container5">
    <div id="form2">
    <h1>{{ 'title_Comments_delete'|trans({'%id%': Comments.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('Comments_delete', {id: Comments.id}) }) }}
    {{ form_widget(form) }}
